jumpz_op=$(echo -e '\x0C')
pushloc_op=$(echo -e '\x0D')
mkvec_op=$(echo -e '\x0E')
pushglob_op=$(echo -e '\x0F')
slide_op=$(echo -e '\x13')
mkfunval_op=$(echo -e '\x14')
targ_op=$(echo -e '\x15')
